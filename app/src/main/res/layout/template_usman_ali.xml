<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:background="#E9E9E9"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/usman_resume_profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/profile_img"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_marginEnd="5dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:text="Contact"
                        android:textSize="16sp"
                        android:textColor="@color/black"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginTop="3dp"
                        />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:padding="2dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/usman_resume_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:padding="2dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:id="@+id/usman_resume_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+8801798-487709"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:padding="2dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_email" />

                        <TextView
                            android:id="@+id/usman_resume_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mahiuddin834@gmail.com"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:padding="2dp"
                            app:tint="@color/black"
                            android:src="@drawable/web_ic" />

                        <TextView
                            android:id="@+id/usman_resume_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.website.com"
                            android:textColor="@color/black"
                            android:fontFamily="@font/arial_regular"
                            android:textSize="8dp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/usman_resume_certifications_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Certifications"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_certifications_recyclearview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />

                    <TextView
                        android:id="@+id/usman_resume_expertise_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Skills"
                        android:textSize="16sp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_expertise_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />

                    <TextView
                        android:id="@+id/usman_resume_language_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Languages"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_language_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />


                    <TextView
                        android:id="@+id/usman_resume_awards_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="ACHIVEMENTS"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_bold"
                        android:layout_marginTop="20dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_awards_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:paddingEnd="20dp"
                >

                <TextView
                    android:id="@+id/usman_resume_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arial_bold"
                    android:textStyle="bold"
                    android:text="USMAN ALI"

                    />

                <TextView
                    android:id="@+id/usman_resume_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:fontFamily="@font/arial_regular"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:text="UX Designer"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="20dp"
                    android:layout_marginEnd="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Profile"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"

                        />


                    <TextView
                        android:id="@+id/usman_resume_profile_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="8dp"
                        android:justificationMode="inter_word"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/arial_regular"
                        android:textColor="@color/black_shadow"
                        android:text=""
                        />

                    <TextView
                        android:id="@+id/usman_resume_work_experience_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:text="Experience"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_workExperience_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/usman_resume_education_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Education"
                        android:textSize="16sp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_education_recyclearview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />

                    <TextView
                        android:id="@+id/usman_resume_project_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Projects"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_project_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/usman_resume_extra_curricular_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="EXTRA CURRICULAR ACTIVITIES"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_bold"
                        android:layout_marginTop="10dp"

                        />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_extra_curricular_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />


                    <TextView
                        android:id="@+id/usman_resume_references_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="References"
                        android:textSize="16sp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"

                        />



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/usman_resume_references_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</androidx.core.widget.NestedScrollView>