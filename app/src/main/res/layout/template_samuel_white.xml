<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="420dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#2A2929"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <ImageView
                    android:id="@+id/samuel_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/profile_png"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/noel_upper_curve"
                    android:backgroundTint="@color/yellow_border"
                    android:paddingTop="20dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        >

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:text="CONTACT ME"
                            android:fontFamily="@font/arial_bold"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/yellow_border"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"


                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"

                            >

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:padding="2dp"
                                app:tint="@color/white"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/samuel_resume_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="171/2, West Sherapara, Mirpur -1216"
                                android:textColor="@color/white"
                                android:textSize="7dp"
                                android:fontFamily="@font/arial_regular"
                                android:layout_marginStart="3dp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"

                            >

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:padding="2dp"
                                app:tint="@color/white"
                                android:src="@drawable/ic_phone" />

                            <TextView
                                android:id="@+id/samuel_resume_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+8801798-487709"
                                android:textColor="@color/white"
                                android:fontFamily="@font/arial_regular"
                                android:layout_marginStart="3dp"
                                android:textSize="7dp"
                                android:textStyle="normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"

                            >

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:padding="2dp"
                                app:tint="@color/white"
                                android:src="@drawable/ic_email" />

                            <TextView
                                android:id="@+id/samuel_resume_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mahiuddin834@gmail.com"
                                android:textColor="@color/white"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/arial_regular"
                                android:textSize="7dp"
                                android:textStyle="normal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"

                            >

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:padding="2dp"
                                app:tint="@color/white"
                                android:src="@drawable/web_ic" />

                            <TextView
                                android:id="@+id/samuel_resume_website"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="www.website.com"
                                android:textColor="@color/white"
                                android:layout_marginStart="3dp"
                                android:fontFamily="@font/arial_regular"
                                android:textSize="7dp"
                                android:textStyle="normal" />

                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/samuel_resume_certifications_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="CERTIFICATIONS"
                        android:textSize="10sp"
                        android:fontFamily="@font/arial_bold"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_border"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_certifications_recyclearview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/samuel_resume_expertise_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="SKILLS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_border"

                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_expertise_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />

                    <TextView
                        android:id="@+id/samuel_resume_language_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="LANGUAGES"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_border"
                        android:paddingTop="3dp"
                        android:gravity="center"
                        android:paddingBottom="3dp"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_language_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />


                    <TextView
                        android:id="@+id/samuel_resume_award_txt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ACHIVEMENTS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:background="@drawable/yellow_border"
                        android:paddingTop="3dp"
                        android:gravity="center"
                        android:paddingBottom="3dp"

                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_awards_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        />


                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >

                <TextView
                    android:id="@+id/samuel_resume_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:text="Graphic Designer"
                    android:fontFamily="@font/arial_regular"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/samuel_resume_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:text="SAMUEL WHITE"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:fontFamily="@font/arial_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/yellow_border"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABOUT ME"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"
                        />

                    <TextView
                        android:id="@+id/samuel_resume_profile_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="7sp"
                        android:justificationMode="inter_word"
                        android:textAlignment="viewStart"
                        android:textStyle="normal"
                        android:fontFamily="@font/arial_regular"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black_shadow"
                        />

                    <TextView
                        android:id="@+id/samuel_resume_workExperience_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXPERIENCE"
                        android:fontFamily="@font/arial_bold"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_workExperience_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/samuel_resume_project_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROJECTS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_project_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/samuel_resume_extra_curricular_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXTRA CURRICULAR ACTIVITIES"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_extra_curricular_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/samuel_resume_education_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDUCATION"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/arial_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_education_recyclearview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        />

                    <TextView
                        android:id="@+id/samuel_resume_references_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REFFERANCE"
                        android:textSize="10sp"
                        android:fontFamily="@font/arial_bold"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="10sp"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/samuel_resume_references_recyclearView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        />



                </LinearLayout>







            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</androidx.core.widget.NestedScrollView>