<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"


        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DCE0E6"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#1E344D"

                />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="-50dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"

                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dyrection_resume_profile_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_img" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"

                >





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Contact"
                    android:textSize="10sp"
                    android:textColor="@color/black"

                    />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/dyrection_resume_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="6dp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/dyrection_resume_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+8801798-487709"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="6dp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:id="@+id/dyrection_resume_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mahiuddin834@gmail.com"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="6dp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:padding="2dp"
                        android:src="@drawable/web_ic" />

                    <TextView
                        android:id="@+id/dyrection_resume_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="www.website.com"
                        android:textColor="@color/black"
                        android:fontFamily="@font/arial_regular"
                        android:textSize="6dp"
                        android:textStyle="normal" />

                </LinearLayout>



                <TextView
                    android:id="@+id/dyrection_resume_expertise_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SKILLS"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_expertise_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_language_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LANGUAGES"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_language_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_certifications_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CERTIFICATIONS"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_certifications_recyclearview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_awards_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACHIEVEMENTS"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_awards_recyclearview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#DCE0E6"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:gravity="center_vertical"

                >

                <TextView
                    android:id="@+id/dyrection_resume_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DYRECTION"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arial_bold"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/dyrection_resume_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_regular"
                    android:text="Android Developer"
                    android:textSize="12sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="50dp"
                android:paddingBottom="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROFILE"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dyrection_resume_profile_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_regular"
                    android:textStyle="normal"
                    android:justificationMode="inter_word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black_shadow"
                    android:textSize="6dp"
                    android:layout_marginTop="5dp"
                    android:text=""/>

                <TextView
                    android:id="@+id/dyrection_resume_workExperience_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPERIENCE"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_workExperience_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />


                <TextView
                    android:id="@+id/dyrection_resume_education_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDUCATION"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_education_recyclearview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_project_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROJECTS"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_project_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_extra_curricular_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXTRA CURRICULAR ACTIVITIES"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_extra_curricular_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/dyrection_resume_references_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REFERENCES"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dyrection_resume_references_recyclearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>