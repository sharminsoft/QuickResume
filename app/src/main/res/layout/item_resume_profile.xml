<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Image Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileImageContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/headshotIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/round_person_24"
                android:scaleType="centerCrop"
                android:contentDescription="Profile Image" />

        </androidx.cardview.widget.CardView>

        <!-- Profile Information Container -->
        <LinearLayout
            android:id="@+id/profileInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/profileImageContainer"
            app:layout_constraintEnd_toStartOf="@+id/arrowIcon"
            app:layout_constraintTop_toTopOf="@+id/profileImageContainer"
            app:layout_constraintBottom_toBottomOf="@+id/profileImageContainer">

            <!-- Full Name -->
            <TextView
                android:id="@+id/fullNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_light"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Email with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="john.doe@email.com"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Phone with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_phone"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+1 234 567 8900"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Address with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/addressTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New York, USA"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/round_arrow_forward_ios_24"
            android:layout_marginEnd="4dp"
            app:tint="@color/primary_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="View Details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>